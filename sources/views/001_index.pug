extends models/layout-default
block content
  section.se__hero
    .container
      .row.middle
        .col.md-6
          img(src="img/bottles.png", alt="")
        .col.md-6
          .section__intro
            h2 More than food
              svg.decor: use(xlink:href="#decor")
            p Everything your body needs in one bottle of Simpleat. Drink Simpleat and forget about hunger. Be the first to try nutrition designed for your needs.
            p: strong Free shipping for orders over €90
          form(action="")
            select.big
              option(value="4") 4 bottles
              option(value="6") 6 bottles
              option(value="8") 8 bottles
              option(value="12" selected) 12 bottles
              option(value="24") 24 bottles
              option(value="48") 48 bottles
            .row
              .col.sm-6
                .radio.big
                  input#onetime(type="radio", name="se__hero", checked, value="onetime")
                  label(for="onetime")
                    span.input: svg: use(xlink:href="#check")
                    span.text
                      strong One-Time
                      span Purchase
              .col.sm-6
                .radio.big
                  input#subscribe(type="radio", name="se__hero", value="subscribe")
                  label(for="subscribe")
                    span.input: svg: use(xlink:href="#check")
                    a(tabindex="-1" data-show="popover" data-placement="top" data-content="<p>By subscribing you will receive 12 bottles of Simpleat monthly</p><p>You can cancel your subscription anytime. <a>Learn more</a></p>").text
                      strong Subscribe
                      span and save 5%
            .row.form--footer
              .col.sm-6
                .total 
                  strong €32
                  span €2.60 per meal (400 kcal)
              .col.sm-6
                button.btn.default Add to cart
  section.se__what
    .container
      .row.middle
        .col.md-4
          .section__intro
            h2 What is Simpleat?
              svg.decor: use(xlink:href="#decor")
            p Simpleat is made to provide the perfectly balanced diet with every nutrient your body needs for optimal health.
            p Simpleat will take care of your hunger while you have more important things to do whether it is your work, business, travel or simply having fun.
        .col.md-7.offset-md-1
          button.modal--video(data-mfp-src="http://www.youtube.com/watch?v=RtBbinpK5XI")
            img(src="img/what_video.png", alt="")
            span.overlay
              svg.video: use(xlink:href="#play")
              span Play video
