    .container
      .section__intro
        h2 Why Simpleat?
          svg.decor: use(xlink:href="#decor")
        p Enjoy all the benefits of Simpleat
      .row
        .col.md-2.sm-6: .why--item
          .img
            img(src="img/why1.png", alt="")
