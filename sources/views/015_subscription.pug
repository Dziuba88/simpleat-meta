                  .order--title
                    strong 12 bottles
                    span Total price: € 12.00
                  .order--status
                    svg: use(xlink:href="#delivered")
                    span Active
                .order__body
                  .order--row 
                    span Order number:
                    span 000346346
                  .order--row 
                    span Order date:
                    span september 7, 2018
                  .order--row 
                    span Next billing date:
                    span september 7, 2018
                  .order--row 
                    span Payment method:
                    span PayPal
